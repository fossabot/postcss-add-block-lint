{
  "name": "postcss-add-block-lint",
  "version": "0.2.0",
  "description": "A PostCSS plugin that is used to lint css for existence of classes that might trigger add blockers.",
  "license": "MIT",
  "author": {
    "name": "Daniel Tedman",
    "url": "https://danieltedman.com"
  },
  "repository": "https://github.com/dbtedman/postcss-add-block-lint",
  "homepage": "https://github.com/dbtedman/postcss-add-block-lint#readme",
  "bugs": "https://github.com/dbtedman/postcss-add-block-lint/issues",
  "keywords": [
    "css",
    "nodejs",
    "yarn",
    "postcss",
    "postcss-plugin",
    "typescript"
  ],
  "main": "./src/main.js",
  "scripts": {
    "_prettier": "prettier './**/*.{md,yml,yaml,json,ts,js}'",
    "build": "tsc --build ./tsconfig.json && rm -rf ./build/{**/*,*}.spec.js && rm -rf ./build/fixtures",
    "clean": "rm -rf ./build/",
    "codecov": "codecov",
    "format": "yarn _prettier --write",
    "lint": "yarn _prettier --check",
    "prepare": "mkdir -p ./data; if [ ! -f ./data/easylist.txt ]; then curl https://easylist-downloads.adblockplus.org/easylist.txt > ./data/easylist.txt; fi",
    "test": "jest --coverage"
  },
  "peerDependencies": {
    "postcss": "*"
  },
  "dependencies": {
    "chalk": "3.0.0"
  },
  "devDependencies": {
    "@types/jest": "25.1.3",
    "@types/node": "13.7.4",
    "codecov": "3.6.5",
    "fs-extra": "8.1.0",
    "husky": "4.2.3",
    "jest": "25.1.0",
    "postcss": "7.0.17",
    "prettier": "1.19.1",
    "ts-jest": "25.2.1",
    "ts-node": "8.6.2",
    "typescript": "3.8.2"
  }
}

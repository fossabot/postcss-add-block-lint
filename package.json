{
  "name": "postcss-add-block-lint",
  "version": "0.1.1",
  "description": "A PostCSS plugin that is used to lint css for existence of classes that might trigger add blockers.",
  "main": "./src/main.js",
  "scripts": {
    "prepare": "mkdir -p ./data; if [ ! -f ./data/easylist.txt ]; then curl https://easylist-downloads.adblockplus.org/easylist.txt > ./data/easylist.txt; fi",
    "test": "npm run test:lint && npm run test:unit",
    "test:lint": "eslint --color ./src",
    "test:unit": "nyc --reporter=text --reporter=lcov mocha --colors ./src",
    "format": "prettier ./**/*.{js,md,yml,yaml,json} --write"
  },
  "authors": [
    "Daniel Tedman (https://danieltedman.com)"
  ],
  "license": "MIT",
  "repository": "https://github.com/dbtedman/postcss-add-block-lint",
  "peerDependencies": {
    "postcss": "7.x"
  },
  "devDependencies": {
    "@types/mocha": "5.2.7",
    "ajv": "6.10.2",
    "eslint": "6.1.0",
    "fs-extra": "8.1.0",
    "mocha": "6.2.0",
    "nyc": "14.1.1",
    "postcss": "7.0.17",
    "prettier": "1.18.2"
  },
  "dependencies": {
    "chalk": "2.4.2"
  }
}
